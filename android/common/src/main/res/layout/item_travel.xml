<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription">
    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.innomalist.taxi.common.models.Travel"/>
    </data>
    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/exTravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        app:animationDuration="1300"
        app:backSideColor="@color/accent_grey"
        app:cameraHeight="30">

        <android.support.v7.widget.CardView
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:visibility="visible">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorAccent"
                    android:paddingBottom="7dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{"#" + String.valueOf(item.id)}'
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:maxWidth="150dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:maxWidth="150dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <ImageView
                    android:id="@+id/image_map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{item.imageUrl}"
                    app:layout_constraintDimensionRatio="3:2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraint_id" />


                <TextView
                    android:id="@+id/label_from"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/from"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_map" />

                <TextView
                    android:id="@+id/text_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:text="@{item.pickupAddress}"
                    android:textColor="#343d43"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/text_to"
                    app:layout_constraintStart_toStartOf="@id/label_from"
                    app:layout_constraintTop_toBottomOf="@id/label_from" />

                <TextView
                    android:id="@+id/label_to"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    app:layout_constraintBaseline_toBaselineOf="@id/label_from"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:text="@{item.destinationAddress}"
                    android:textColor="#343d43"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/label_to"
                    app:layout_constraintTop_toBottomOf="@id/label_to" />

                <ImageView
                    android:id="@+id/divider_address"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:src="#e0e0e0"
                    app:layout_constraintTop_toBottomOf="@id/text_from" />

                <TextView
                    android:id="@+id/label_request_time"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/request_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_address" />

                <TextView
                    android:id="@+id/text_request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343d43"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/label_request_time"
                    app:layout_constraintTop_toBottomOf="@id/label_request_time" />

                <TextView
                    android:id="@+id/text_request_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343d43"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/label_request_time"
                    app:layout_constraintTop_toBottomOf="@id/text_request_time" />

                <TextView
                    android:id="@+id/label_finish_time"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/finish_time"
                    app:layout_constraintStart_toStartOf="@id/label_to"
                    app:layout_constraintTop_toBottomOf="@id/divider_address" />

                <TextView
                    android:id="@+id/text_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343d43"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/label_finish_time"
                    app:layout_constraintTop_toBottomOf="@id/label_finish_time" />

                <TextView
                    android:id="@+id/text_finish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343d43"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/label_finish_time"
                    app:layout_constraintTop_toBottomOf="@id/text_finish_time" />

                <ImageView
                    android:id="@+id/divider_details"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:src="#e0e0e0"
                    app:layout_constraintTop_toBottomOf="@id/text_request_date" />

                <TextView
                    android:id="@+id/label_details_cost"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/cost"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_details" />

                <TextView
                    android:id="@+id/text_details_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343d43"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="-"
                    app:layout_constraintStart_toStartOf="@id/label_details_cost"
                    app:layout_constraintTop_toBottomOf="@id/label_details_cost" />

                <TextView
                    android:id="@+id/label_details_distance"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/distance_traveled"
                    app:layout_constraintStart_toStartOf="@id/label_to"
                    app:layout_constraintTop_toBottomOf="@id/divider_details" />

                <TextView
                    android:id="@+id/text_details_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#343d43"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="-"
                    app:layout_constraintStart_toStartOf="@id/label_details_distance"
                    app:layout_constraintTop_toBottomOf="@id/label_details_distance" />


                <Button
                    android:id="@+id/button_hide_travel"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/hide_travel"
                    android:textColor="@color/accent_orange"
                    app:layout_constraintEnd_toStartOf="@id/button_Complaint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_details_cost" />

                <Button
                    android:id="@+id/button_Complaint"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/write_complaint"
                    app:layout_constraintBaseline_toBaselineOf="@id/button_hide_travel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/button_hide_travel" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:visibility="gone">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint_header"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:background="?attr/colorAccent"
                    app:layout_constraintBottom_toBottomOf="@id/constraint_content"
                    app:layout_constraintTop_toTopOf="@id/constraint_content">

                    <TextView
                        android:id="@+id/title_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text='@{"#"+item.id}'
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/title_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@id/title_date_label"
                        app:layout_constraintStart_toStartOf="@id/title_date_label" />


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/constraint_header">

                    <ImageView
                        android:id="@+id/title_from_to_dots"
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        app:layout_constraintDimensionRatio="1:3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_destination" />


                    <ImageView
                        android:id="@+id/title_from_to_dots_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="40dp"
                        android:src="#e0e0e0"
                        app:layout_constraintBottom_toBottomOf="@id/title_from_to_dots"
                        app:layout_constraintStart_toEndOf="@id/title_from_to_dots"
                        app:layout_constraintTop_toTopOf="@id/title_from_to_dots" />

                    <TextView
                        android:id="@+id/title_from_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:text="@{item.pickupAddress}"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/title_from_to_dots_divider"
                        app:layout_constraintEnd_toEndOf="@id/title_from_to_dots_divider"
                        app:layout_constraintStart_toStartOf="@id/title_from_to_dots_divider" />

                    <TextView
                        android:id="@+id/title_to_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:text="@{item.destinationAddress}"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@id/title_from_to_dots_divider"
                        app:layout_constraintStart_toStartOf="@id/title_from_to_dots_divider"
                        app:layout_constraintTop_toBottomOf="@id/title_from_to_dots_divider" />

                    <TextView
                        android:id="@+id/label_cost"
                        style="@style/TitleBadgeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/cost"
                        app:layout_constraintEnd_toStartOf="@id/label_distance"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title_to_address" />

                    <TextView
                        android:id="@+id/text_cost"
                        style="@style/TitleBadgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="4dp"
                        android:text='@{@string/unit_money(item.cost)}'
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/label_cost"
                        app:layout_constraintStart_toStartOf="@id/label_cost"
                        app:layout_constraintTop_toBottomOf="@id/label_cost" />

                    <TextView
                        android:id="@+id/label_distance"
                        style="@style/TitleBadgeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_traveled"
                        app:layout_constraintEnd_toStartOf="@id/label_duration"
                        app:layout_constraintStart_toEndOf="@id/label_cost"
                        app:layout_constraintTop_toTopOf="@id/label_cost" />

                    <TextView
                        android:id="@+id/text_distance"
                        style="@style/TitleBadgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{@string/unit_distance(((float)item.distanceReal / 1000f))}'
                        app:layout_constraintBaseline_toBaselineOf="@id/text_cost"
                        app:layout_constraintEnd_toEndOf="@id/label_distance"
                        app:layout_constraintStart_toStartOf="@id/label_distance" />

                    <TextView
                        android:id="@+id/label_duration"
                        style="@style/TitleBadgeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/duration"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/label_distance"
                        app:layout_constraintTop_toTopOf="@id/label_cost" />


                    <TextView
                        android:id="@+id/text_duration"
                        style="@style/TitleBadgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBaseline_toBaselineOf="@id/text_cost"
                        app:layout_constraintEnd_toEndOf="@id/label_duration"
                        app:layout_constraintStart_toStartOf="@id/label_duration" />


                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </com.ramotion.foldingcell.FoldingCell>
</layout>
